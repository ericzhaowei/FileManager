<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/smb_server_item_width"
    android:layout_height="@dimen/smb_server_item_height"
    app:cardBackgroundColor="#8be8b7">

    <ImageView
        android:id="@+id/smb_server_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_devices_white_48dp"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/smb_server_title"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_gravity="bottom"
        android:layout_marginBottom="@dimen/smb_server_item_title_bottom"
        android:textSize="17sp"
        android:textColor="@android:color/white" />

</android.support.v7.widget.CardView>