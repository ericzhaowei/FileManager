<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.ider.filemanager.views.SmbProgressbar
        android:id="@+id/smb_toolbar_progress"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        app:reach_height="3dp"
        app:unreach_height="2dp"
        app:reach_color="#ffffff"
        app:unreach_color="#848484"
        app:text_color="#ffffff"
        android:visibility="gone"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/smb_toolbar_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/smb_title"
        android:textSize="16sp"
        android:textColor="#b4b4b4"
        android:layout_gravity="center"/>

</FrameLayout>